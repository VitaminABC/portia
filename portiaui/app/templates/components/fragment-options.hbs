{{list-item-badge value=multiplicity color=fragmentColor}}

<div class="form-group">
    {{#if isRange}}
        {{input type="text" class="form-control compact-control fragment-left-half" value=(mut lower) placeholder="1"}}
        <span>-</span>
        {{input type="text" class="form-control compact-control fragment-right-half" value=(mut higher) placeholder="10"}}
    {{else}}
    {{input type="text" class="form-control compact-control fragment-input" value=(mut fragment.value) placeholder=listPlaceholder}}
    {{/if}}
</div>

<div class="form-group">
    {{select-box buttonClass="compact-control fragment-type" value=(mut fragmentType) valueAttribute='label' choices=fragmentTypeOptions isDisabled=(eq index 0)}}
</div>

{{#if (not-eq index 0)}}
    {{list-item-icon class="fragment-action-icon" icon='remove' action=(action removeFragment fragment) bubbles=false}}
{{/if}}
